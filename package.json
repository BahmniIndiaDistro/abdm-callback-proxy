{
  "name": "bahmni-abdm-callback-proxy",
  "version": "1.0.0",
  "description": "Bahmni ABDM callback proxy",
  "main": "index.js",
  "scripts": {
    "preinstall": "node -e \"if (process.env.npm_execpath.indexOf('yarn') === -1) throw new Error('Use yarn for installing: https://yarnpkg.com/en/docs/install')\"",
    "build:clean": "rm -rf dist && mkdir dist",
    "build": "yarn build:clean && tsc --build tsconfig.json",
    "format": "prettier --write \"src/**/*.ts\" ",
    "lint": "eslint 'src/**/*.ts' --fix",
    "refresh": "yarn build && docker rm -f abdm-callback-proxy && docker build -t abdm-callback-proxy . && docker run -d -p 8080:80 --name abdm-callback-proxy abdm-callback-proxy",
    "rollout": "yarn build && docker build -t n0man/abdm-callback-proxy . && docker push n0man/abdm-callback-proxy && kubectl rollout restart deployment abdm-callback-proxy",
    "test": "jest"
  },
  "keywords": [],
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.3",
    "typescript": "4.3.5",
    "jest-ts-auto-mock": "^2.1.0",
    "ts-auto-mock": "^3.6.2",
    "ttypescript": "^1.5.13",
    "@types/node": "^15.0.1",
    "njs-types": "^0.7.6",
    "prettier": "^2.2.1"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>config.ts"
    ],
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "globals": {
      "ts-jest": {
        "compiler": "ttypescript"
      }
    }
  }
}
